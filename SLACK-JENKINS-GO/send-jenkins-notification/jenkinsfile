pipeline{
    agent any

    stages{
        stage('Checkout Codebase'){
            steps{
                     checkout scm: [$class: 'GitSCM',branches: [[name: '*/main']],userRemoteConfigs:[[credentialsId: 'AAAAC3NzaC1lZDI1NTE5AAAAICb5yALCEp24Tatncxj3MzVPiYk4N3c2zOTiwLNucPVg raraya10642@ufide.ac.cr',url: 'git@github.com:Ricardoavv/SLACK-JENKINS-GO.git']]]
            }
        }
        stage('Build'){
            steps{
                echo 'Building Codebase'
            }
        }
        stage('Test'){
            steps{
                echo 'Running Tests on changes'
            }
        }
        stage('Deploy'){
            steps{
                echo 'Done!'
            }
        }
        
    }

    post {
        always{
            echo 'Sending Slack massage'
            sh "go run send-jenkins-notification/slack-notification.go ${BUILD_URL} ${currentBuild.currentResult} ${BUILD_NUMBER} ${JOB_NAME}"
        }


    }

}